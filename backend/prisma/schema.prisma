generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  title        String
  firstName    String
  lastName     String
  email        String        @unique
  password     String
  productItems ProductItem[]
  cart         Cart?
}

model Cart {
  id           Int           @id @default(autoincrement())
  productItems ProductItem[]
  userId       Int           @unique
  user         User          @relation(fields: [userId], references: [id])
}

model ProductItem {
  id        Int     @id @default(autoincrement())
  productId Int
  product   Product @relation(fields: [productId], references: [id])
  userId    Int
  user      User    @relation(fields: [userId], references: [id])
  isLiked   Boolean
  cart      Cart?   @relation(fields: [cartId], references: [id])
  cartId    Int?
  count     Int?
}

model Product {
  id           Int           @id @default(autoincrement())
  name         String
  category     String
  price        Int
  imageUrl     String
  productItems ProductItem[]
}
